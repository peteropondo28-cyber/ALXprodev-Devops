#!/bin/bash

DATA_DIR="pokemon_data"
REPORT="pokemon_report.csv"

echo "Name,Height (m),Weight (kg)" > "$REPORT"

for file in "$DATA_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")

    # Convert units
    height_m=$(awk -v h="$height" 'BEGIN { printf "%.1f", h/10 }')
    weight_kg=$(awk -v w="$weight" 'BEGIN { printf "%.1f", w/10 }')

    echo "$name,$height_m,$weight_kg" >> "$REPORT"
done

echo -e "\nCSV Report generated at: $REPORT\n"

# Calculate averages using AWK
awk -F',' '
NR>1 { 
    h+=$2; 
    w+=$3; 
    c++; 
} 
END { 
    printf "Average Height: %.2f m\nAverage Weight: %.2f kg\n", h/c, w/c 
}
' "$REPORT"
